Q. Print all possible combinations from keypad using the number provided as input.


#include<iostream>
using namespace std;

int keypad(int num, string output[]){
    if(num == 0){
        output[0] = "";
        return 1;
    }
    int size = keypad(num/10, output);
    string key;
    switch(num % 10){
        case 2: key = "abc";
                break;
        case 3: key = "def";
                break;
        case 4: key = "ghi";
                break;
        case 5: key = "jkl";
                break;
        case 6: key = "mno";
                break;
        case 7: key = "pqrs";
                break;
        case 8: key = "tuv";
                break;
        case 9: key = "wxyz";
                break;
        default: break;
    }
    int i = 1;
    while(key[i] != '\0'){
        for(int j = 0; j < size; j++){
            output[size * i + j] = key[i] + output[j];
        }

        i++;
    }
    cout<<endl;

    for(int i = 0; i < size * (key.size() - 1) + 1; i++){
        cout<<output[i]<<endl;
    }

    for(int i = 0; i < size; i++){
        output[i] = key[0] + output[i];
    }

    cout<<endl;

    return size * key.size();
}

int main(){
    int num;
    cin>>num;
    string *output = new string[1000];
    int size = keypad(num, output);
    for(int i = 0; i < size; i++){
        cout<<output[i]<<endl;
    }
    return 0;
}
